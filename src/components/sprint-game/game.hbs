<div
  class="absolute top-8 left-8 flex justify-center items-center rounded-full w-20 h-20 border bg-white">
  <span data-role="sprint-game__timer" class="block text-3xl">60</span>
</div>

<button data-role="sprint-game__btn-close"
        class="w-10 h-10 absolute top-12 right-8 text-gray-400 transition-colors hover:text-gray-300 active:text-gray-500">
  <i class="w-full h-full fa-solid fa-close pointer-events-none"></i>
</button>

<div data-role="sprint-game__score" class="text-3xl">0</div>
<div class="flex flex-col items-center gap-8 border px-14 py-8 rounded-lg bg-white">
  <div data-role="sprint-game__progress-word" class="flex gap-2">
    <div class="w-7 h-7 flex justify-center items-center text-white rounded-full disable-progress-word"><i
      class="fa-solid fa-check"></i></div>
    <div class="w-7 h-7 flex justify-center items-center text-white rounded-full disable-progress-word"><i
      class="fa-solid fa-check"></i></div>
    <div class="w-7 h-7 flex justify-center items-center text-white rounded-full disable-progress-word"><i
      class="fa-solid fa-check"></i></div>
  </div>

  <div data-role="sprint-game__progress-level" class="flex gap-4">
    <img src="./assets/sprint-game/imgs/diamond-1.png" alt="Diamond" class="w-16 h-16 disable-progress-level">
    <img src="./assets/sprint-game/imgs/diamond-2.png" alt="Diamond" class="w-16 h-16 disable-progress-level">
    <img src="./assets/sprint-game/imgs/diamond-3.png" alt="Diamond" class="w-16 h-16 disable-progress-level">
  </div>

  <div class="flex gap-2">
    <div class="flex flex-col items-center">
      <div class="flex gap-2">
        <div data-role="sprint-game__original-word" class="text-3xl font-semibold">word</div>
        <button data-word-id="0" data-role="sprint-game__btn-audio"
                class="text-gray-500 transition-colors hover:text-gray-400 active:text-gray-600"><i
          class="fa-solid fa-headphones-simple pointer-events-none"></i></button>
      </div>
      <div data-role="sprint-game__translate-word" class="text-xl text-gray-500">слово</div>
    </div>
  </div>

  <div class="flex justify-between gap-4 w-full">
    <div class="flex flex-col items-center gap-2">
      <button data-role="sprint-game__btn-wrong"
              class="w-24 px-4 py-2 rounded bg-red-500 text-white transition-colors hover:bg-red-400 active:bg-red-600">
        Неверно
      </button>
      <div class="text-gray-400"><i class="fa-solid fa-arrow-left"></i></div>
    </div>

    <div class="flex flex-col items-center gap-2">
      <button data-role="sprint-game__btn-success"
              class="w-24 px-4 py-2 rounded bg-green-500 text-white transition-colors hover:bg-green-400 active:bg-green-600">
        Верно
      </button>
      <div class="text-gray-400"><i class="fa-solid fa-arrow-right"></i></div>
    </div>
  </div>
</div>